<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/flock_event_topic_map_image"
        android:contentDescription="thumbnail image of event" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/flock_event_topic_row">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/flock_event_topic_name"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Event Time"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/flock_event_topic_time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People going"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/flock_event_topic_attendance"/>
    </LinearLayout>
</LinearLayout>