<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="0"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:id="@+id/upvote_downvote_view_text"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="upboat"
        android:id="@+id/upvote_downvote_view_upvote"
        android:background="#FFFFFF"
        style="?android:attr/borderlessButtonStyle"
        android:layout_above="@+id/upvote_downvote_view_text"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="downboat"
        android:background="#FFFFFF"
        android:id="@+id/upvote_downvote_view_downvote"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/upvote_downvote_view_text"/>


</RelativeLayout>