<resources>

    <!-- Base application theme. -->
    <style name="GooseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:windowBackground">@color/whiteBackground</item>
        <item name="android:colorBackground">@color/whiteBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="stickyListHeadersListViewStyle">@style/Widget.AppCompat.ListView</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primaryLight</item>
    </style>

    <style name="FlockSmallTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name ="android:singleLine">true</item>
    </style>

    <style name="CustomEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">18dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="GeeseTextAppearance">
        <item name="android:textSize">7sp</item>
    </style>

    <style name="GeeseDialogBoxTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:textAppearanceMedium">@style/GeeseTextAppearance</item>
    </style>

</resources>
