<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamawesome.geese" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/GooseTheme" >

        <activity
            android:name="com.teamawesome.geese.activity.debug.DebugMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamawesome.geese.activity.debug.DebugHomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.teamawesome.geese.activity.debug.DebugNFCActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.teamawesome.geese.activity.GeeseActivity"
            android:label="@string/title_activity_goose" >
        </activity>
        <activity
            android:name="com.teamawesome.geese.activity.debug.DebugLoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.teamawesome.geese.activity.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.teamawesome.geese.activity.debug.DebugChatActivity"
            android:label="@string/title_activity_debug_chat" >
        </activity>
        <activity
            android:name="com.teamawesome.geese.activity.debug.DebugUserProfileActivity"
            android:label="@string/title_activity_debug_user_profile" >
        </activity>
        <activity
            android:name="com.teamawesome.geese.activity.debug.DebugViewPagerActivity"
            android:label="@string/title_activity_debug_user_profile" >
        </activity>
    </application>

</manifest>
