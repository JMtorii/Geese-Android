<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/upvote_downvote_view_text"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="0"
        android:gravity="center"
        android:layout_centerVertical="true"
        />

    <ImageButton
        android:id="@+id/upvote_downvote_view_upvote"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
        android:background="@color/whiteBackground"
        android:layout_above="@+id/upvote_downvote_view_text"
        />

    <ImageButton
        android:id="@+id/upvote_downvote_view_downvote"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:background="@color/whiteBackground"
        android:layout_below="@+id/upvote_downvote_view_text"
        />

</RelativeLayout>